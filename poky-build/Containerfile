FROM docker.io/crops/yocto:ubuntu-20.04-base

USER root
RUN wget --progress=dot:mega https://bootstrap.pypa.io/get-pip.py && \
    python3 get-pip.py && \
    rm get-pip.py && \
    python3 -m pip install --no-cache-dir kas && \
    echo 'StrictHostKeyChecking accept-new' >> /etc/ssh/ssh_config

USER yoctouser
